#! /bin/sh
### BEGIN INIT INFO
# Provides: ethereum
# Required-Start: $remote_fs $syslog
# Required-Stop: $remote_fs $syslog
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: Ethereum Go client
# Description: This file starts and stops Ethereum Go client with netstat
# 
### END INIT INFO

ETHEREUM_DIR=/home/USER_NAME/eth-scripts

case "$1" in
 start)
   su USER_NAME -c $ETHEREUM_DIR/start_go-ethereum.sh
   ;;
 stop)
   su root -c $ETHEREUM_DIR/stop_go-ethereum.sh
   sleep 5
   ;;
 status)
   su USER_NAME -c $ETHEREUM_DIR/status_go-ethereum.sh
   ;;
 version)
   su USER_NAME -c $ETHEREUM_DIR/versio_go-ethereum.sh
   ;;
 restart)
   su root -c $ETHEREUM_DIR/stop_go-ethereum.sh
   sleep 5
   su USER_NAME -c $ETHEREUM_DIR/start_go-ethereum.sh
   ;;
 *)
   echo "Usage: ethereum {start|stop|status|version|restart}" >&2
   exit 3
   ;;
esac
